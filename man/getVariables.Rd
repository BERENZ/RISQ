function (formula, leftHandSide = FALSE) 
{
    if (leftHandSide) 
        formula <- update.formula(formula, . ~ 1)
    else formula <- update.formula(formula, 1 ~ .)
    variables <- all.vars(formula)
    if (length(variables) == 1 && variables == ".") 
        variables <- NA
    return(variables)
  }
}
